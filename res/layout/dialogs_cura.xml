<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Batalha" >

    <TextView
        android:id="@+id/tvCuraMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btCuraOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btCuraCancelar"
        android:layout_alignBottom="@+id/btCuraCancelar"
        android:layout_alignParentRight="true"
        android:text="Ok" />

    <Button
        android:id="@+id/btCuraCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvCuraMsg"
        android:layout_marginTop="40dp"
        android:text="Cancelar" />

</RelativeLayout>